  <!-- Text -->
  <h2 class="editor-section-title opened">Text Settings</h2>
  <div class="editor-section">
    <h2><label for="headline">Text</label></h2>
    <textarea id="headline" name="headline" type="text" value=""></textarea>

    <div class="checkbox-group">
      <input id="quotes" type="checkbox"> 
      <label for="quotes">Include Quotes</label>
    </div>
    
    <h2>Alignment</h2>
    <select class="text-align" id="text-align">
      <option value="" disabled>Select alignment</option>
    </select>

    <h2>Vertical Position</h2>
    <input id="vertical-align" type="range" max="0.85" min="0" step=".025">

    <h2>Font</h2>
    <select class="font-family" id="font-family">
      <option value="" disabled>Select font</option>
    </select>

    <h2>Font Color</h2>
    <select class="font-color" id="font-color">
      <option value="" disabled>Select font color</option>
    </select>

    <h2>Font Size</h2>
    <select class="font-size" id="font-size">
      <option value="" disabled>Select font size</option>
    </select>

    <h2>Line Height</h2>
    <input id="leading" type="range" max="2.5" min="1.5" step=".05">
  </div>


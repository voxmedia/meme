  <!-- Bottom Text -->
  <h2 class="editor-section-title opened">Bottom Text Settings</h2>
  <div class="editor-section">
    <h2><label for="bottom-text">Bottom Text (Bold)</label></h2>
    <input id="bottom-text" name="bottom-text" type="text" value="" placeholder="Write your text here." />
    <h2><label for="bottom-text-2">Bottom Text</label></h2>
    <input id="bottom-text-2" name="bottom-text-2" type="text" value="" placeholder="Write your text here." />
    <h2>Font Size</h2>
    <select class="bottom-text-font-size" id="bottom-text-font-size">
      <option value="" disabled>Select font size</option>
    </select>
    <h2>Vertical Position</h2>
    <input id="bottom-text-vertical" type="range" max="1" min="0.8" step=".01">
  </div>

  <!-- Number Text -->
  <h2 class="editor-section-title opened">Number Text Settings</h2>
  <div class="editor-section">
    <h2><label for="number-text">Number Text</label></h2>
    <input id="number-text" name="number-text" type="text" value="" placeholder="Write your text here." />
    <h2>Vertical Position</h2>
    <input id="number-text-vertical" type="range" max="1.2" min="-0.5" step=".025">
  </div>

  <!-- Fact Checker -->
  <h2 class="editor-section-title opened">Fact Checker Settings</h2>
  <div class="editor-section">
    <h2>Icons</h2>
    <select class="fact-checker" id="fact-checker">
      <option value="" disabled>Select fact checker icons</option>
    </select>
    <h2>Vertical Position</h2>
    <input id="fact-checker-vertical" type="range" max="1.2" min="-0.5" step=".025">
  </div>

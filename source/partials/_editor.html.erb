<form class="m-editor" id="meme-editor-view">

  <!-- Global -->
  <h2 class="editor-section-title opened">Global Settings</h2>
  <div class="editor-section">

    <h2>Presets</h2>
    <select class="preset" id="preset">
      <option value="" disabled>Select preset</option>
      <option value="default" selected>Default</option>
      <option value="quote">Quote Card</option>
      <option value="number">Number Card</option>
    </select>

    <div class="checkbox-group">
      <input id="show-candidate-new" type="checkbox"> 
      <label for="show-candidate-new">Show Candidate</label>
    </div>

    <div class="checkbox-group">
      <input id="show-candidate" type="checkbox"> 
      <label for="show-candidate">Show Candidate (Old)</label>
    </div>

    <div class="checkbox-group">
      <input id="show-logo" type="checkbox"> 
      <label for="show-logo">Show Logo</label>
    </div>

    <!-- <div class="checkbox-group text-shadow">
      <input id="text-shadow" name="shadow" type="checkbox"> 
      <label for="text-shadow">Text Shadow</label>
    </div> -->
  </div>

  <!-- Candidate -->
  <div id="candidate-section-new">
    <h2 class="editor-section-title opened">Candidate Settings</h2>
    <div class="editor-section">
      <h2>Candidate</h2>
      <select class="candidate-new" id="candidate-new">
        <option value="" disabled>Select candidate face</option>
      </select>
      <h2>Horizontal Position</h2>
      <input id="candidate-new-horizontal" type="range" max="0.2" min="0" step=".02">
    </div>
  </div>

  <!-- Candidate -->
  <div id="candidate-section">
    <h2 class="editor-section-title opened">Candidate Settings (Old)</h2>
    <div class="editor-section">
      <h2>Candidate</h2>
      <select class="candidate" id="candidate">
        <option value="" disabled>Select candidate face</option>
      </select>

      <!-- <h2><label for="candidate-ratio">Image Width/Height Ratio</label></h2>
      <input id="candidate-ratio" name="candidate-ratio" type="text" value="" /> -->

      <h2>Image Size</h2>
      <input id="candidate-size" type="range" max="600" min="200" step="10">

      <h2>Horizontal Position</h2>
      <input id="candidate-horizontal" type="range" max="1.2" min="-1" step=".025">

      <h2>Vertical Position</h2>
      <input id="candidate-vertical" type="range" max="1.2" min="-1" step=".025">
    </div>
  </div>


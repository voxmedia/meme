<form class="m-editor" id="meme-editor-view">
  <div class="dropzone" id="dropzone">Drag Image Here</div>
  
  <a href="#" id="image-remove">Remove Image</a>

  <h2><label for="image-scale">Resize Image</label></h2>
  <input id="image-scale" type="range" max="4" min=".01" step=".01" value="1">
  
  <h2><label for="headline">Text</label></h2>
  <textarea id="headline" name="headline" type="text" value=""></textarea>
  
  <h2>Horizontal Alignment</h2>
  <select class="text-align" id="text-align">
    <option value="" disabled>Select alignment</option>
  </select>

  <h2>Vertical Alignment</h2>
  <input id="vertical-align" type="range" max="0.85" min="0" step=".025" value="0.4">

  <h2>Font Size</h2>
  <select class="font-size" id="font-size">
    <option value="" disabled>Select font size</option>
  </select>

  <h2>Font</h2>
  <select class="font-family" id="font-family">
    <option value="" disabled>Select font</option>
  </select>

  <div class="checkbox-group text-shadow">
    <input id="text-shadow" name="shadow" type="checkbox"> 
    <label for="text-shadow">Text Shadow</label>
  </div>

  <!-- <select class="watermark" id="watermark">
    <option value="" disabled>Select a watermark</option>
  </select> -->

  <!-- <h2><label for="credit">Credit</label></h2>
  <input id="credit" name="credit" type="text" value=""> -->

  <div class="m-editor__overlay" id="overlay">
    <h2>Overlay Color</h2>
    <ul class="checkbox-group">
      <li><label><input type="radio" name="overlay" value=""> None</label></li>
      <li><label><input class="m-editor__swatch" type="radio" name="overlay" value="gradient-left-right"></label></li>
      <li><label><input class="m-editor__swatch" type="radio" name="overlay" value="gradient-right-left"></label></li>
      <li><label><input class="m-editor__swatch" type="radio" name="overlay" value="gradient-top-bottom"></label></li>
      <li><label><input class="m-editor__swatch" type="radio" name="overlay" value="gradient-bottom-top"></label></li>
      <li><label><input class="m-editor__swatch" type="radio" name="overlay" value="gradient-middle-light-vertical"></label></li>
      <li><label><input class="m-editor__swatch" type="radio" name="overlay" value="gradient-middle-dark-vertical"></label></li>
      <li><label><input class="m-editor__swatch" type="radio" name="overlay" value="gradient-middle-light-horizontal"></label></li>
      <li><label><input class="m-editor__swatch" type="radio" name="overlay" value="gradient-middle-dark-horizontal"></label></li>
    </ul>
  </div>

  <h2>Overlay Opacity</h2>
  <input id="overlay-opacity" type="range" max="1" min="0" step=".025" value="0.5">

  <div class="m-editor__score" id="overlay">
    <h2>Score</h2>
    <ul class="checkbox-group">
      <li><label><input type="radio" name="score" value="" checked> None</label></li>
      <li><label><input type="radio" name="score" value="up"> <i class="fa fa-thumbs-o-up"></i></label></li>
      <li><label><input type="radio" name="score" value="down"> <i class="fa fa-thumbs-o-down"></i></label></li>
    </ul>
  </div>

  <h2><label for="bottom-text">Bottom Text</label></h2>
  <textarea id="bottom-text" name="bottom-text" type="text" value=""></textarea>
</form>
